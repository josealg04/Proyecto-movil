<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/sitioImage"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:src="@drawable/image_sitios">
        </ImageView>
        <TextView
            android:id="@+id/sitioName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del sitio"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/sitioImage"
            android:layout_toEndOf="@id/sitioImage"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp">

        </TextView>
        <TextView
            android:id="@+id/sitioMunicipio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Municipio sitio"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@id/sitioName"
            android:layout_toEndOf="@id/sitioImage"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/sitioImage">
        </TextView>
    </RelativeLayout>

</androidx.cardview.widget.CardView>